[Unit]
Description=Pyaiot CoAP gateway service
After=network.target radvd.service aiot-broker.service

[Service]
User=pi
Restart=always
Environment='BROKER_HOST=localhost' \
            'BROKER_PORT=8082'

ExecStart=/home/pi/.local/bin/aiot-coap-gateway \
            --broker-host=${BROKER_HOST}   \
            --broker-port=${BROKER_PORT}

[Install]
WantedBy=multi-user.target
Alias=aiot-coap-gateway.service
